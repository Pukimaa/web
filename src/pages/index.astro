---
import "../styles/global.scss";
import "../styles/Home.scss";

import { Icon } from "astro-icon";
import { HelloAstro } from "hello-astro";
import { Image } from "astro:assets";

import BaseLayout from "../layouts/BaseLayout.astro";
import KofiImage from "../../public/assets/kofi.svg";

const title = "Home";
const description =
  "The personal website of Pukima, a software developer and photographer based in Kiel, Northern Germany. Here you can find everything about him.";
---

<BaseLayout {title} {description}>
  <div style='overflow: hidden;'>
    <div class='home-card'>
      <h1 style='font-size: 3.5rem'>Pukima</h1>
      <p>
        <HelloAstro /><i class='emoji'><Icon name='twemoji:waving-hand' /></i> I
        am Pukima and I am a developer and photographer based in Northern
        Germany.
      </p>
      <div class='home-links'>
        <a
          href='https://tiktok.com/@punkima'
          target='_blank'
          rel='norefferer'
          class='social tiktok'
          aria-label='TikTok'
          ><Icon name='fa-brands:tiktok' />
        </a>
        <a
          href='https://twitter.com/pukimaaa'
          target='_blank'
          rel='norefferer'
          class='social twitter'
          aria-label='Twitter'
          ><Icon name='fa-brands:twitter' />
        </a>
        <a
          href='https://github.com/Pukimaa'
          target='_blank'
          rel='norefferer'
          class='social github'
          aria-label='Github'
          ><Icon name='fa-brands:github-alt' />
        </a>
        <a
          href='https://discord.gg/ngkUdXQZ8P'
          target='_blank'
          rel='norefferer'
          class='social discord'
          aria-label='Discord'
          ><Icon name='fa-brands:discord' />
        </a>
      </div>
      <a href='https://ko-fi.com/V7V85DZCG' target='_blank'
        ><Image
          height='50'
          style='border:0px;margin-top:16px'
          src={KofiImage}
          alt='Buy Me a Coffee at ko-fi.com'
        /></a
      >
    </div>
  </div>
</BaseLayout>
