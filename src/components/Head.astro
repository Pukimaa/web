---
import { SEO } from "astro-seo";
import { Plausible } from "astro-analytics";

const { title, description } = Astro.props;
---

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link
    rel="preload"
    href="assets/fonts/excon.ttf"
    as="font"
    type="font/ttf"
    crossorigin
  />
  <link
    rel="preload"
    href="assets/fonts/excon.woff"
    as="font"
    type="font/woff"
    crossorigin
  />
  <link
    rel="preload"
    href="assets/fonts/excon.woff2"
    as="font"
    type="font/woff"
    crossorigin
  />
  <link
    rel="preload"
    href="/assets/fonts/satoshi.ttf"
    as="font"
    type="font/ttf"
    crossorigin
  />
  <link
    rel="preload"
    href="/assets/fonts/satoshi.woff"
    as="font"
    type="font/woff"
    crossorigin
  />
  <link
    rel="preload"
    href="/assets/fonts/satoshi.woff2"
    as="font"
    type="font/woff"
    crossorigin
  />
  <SEO
    title={title + " - Pukima's Personal Website"}
    {description}
    extend={{ link: [{ rel: "icon", href: "/favicon.ico" }] }}
  />
  <Plausible
    domain="pukima.site"
    src="https://stats.pukima.site/js/plausible.js"
  />
</head>
