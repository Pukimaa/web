---
import { SEO } from "astro-seo";
import { Plausible } from "astro-analytics";

const { title, description } = Astro.props;
---
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preload" href="/assets/fonts/PukimasHandwriting2022-Regular.otf" as="font" type="font/otf" crossorigin />
    <link rel="preload" href="/assets/fonts/PukimasHandwriting2022-Regular.ttf" as="font" type="font/ttf" crossorigin />
    <link rel="preload" href="/assets/fonts/Nunito-SemiBold.woff2" as="font" type="font/woff2" crossorigin />
    <SEO
      title={title + " - Pukima's Personal Website"}
      {description}
      extend={{
        link: [{ rel: "icon", href: "/favicon.ico" }],
      }}
    />
    <Plausible
      domain="pukima.site"
      src="https://stats.pukima.site/js/plausible.js"
    />
</head>
