---
import "../styles/components/Card.scss";
import XElement from "astro-xelement";
import { Icon } from "astro-icon";
const { url, title, description, date, image, readingTime = "0" } = Astro.props;
---

<XElement
  @is="a"
  href={url}
  class="card-container post"
  @visible:once={(event) => {
    event.target.animate({ opacity: [0, 1] }, 1000);
  }}
>
  <img
    class="post-image"
    src={image}
    width="500"
    height="auto"
    alt={"Cover for: " + title}
  />
  <h2>{title}</h2>
  <div class="small">
    <p>
      <i class="emoji"><Icon name="fa-solid:clock" /></i>
      {Math.round(readingTime) === 1 ? Math.round(readingTime) : 1} min <i
        class="emoji"
        ><Icon name="fa-solid:calendar" />
      </i>
      {new Date(date).toISOString().slice(0, 10)}
    </p>
  </div>
  <p>{description}</p>
</XElement>
